<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fypbg"
    tools:context=".inHouseActivity">

    <EditText
        android:id="@+id/roomNumberEditTextIH"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/lilac_border"
        android:hint="Room Number"/>

    <EditText
        android:id="@+id/lastNameEditTextIH"
        android:layout_width="match_parent"
        android:background="@drawable/lilac_border"
        android:layout_marginTop="10dp"
        android:layout_height="73dp"
        android:padding="20dp"
        android:hint="Last Name" />

    <Button
        android:id="@+id/searchButtonIH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Search"/>

    <ListView
        android:id="@+id/userListViewIH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lilac_border"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>